@import '_setup'
// @import '_vuetify'
@import '_fonts'
@import '_vars'


html
  font-size 62.5%

body
  font-size 1.6rem
  min-height 100vh
  color $black

.application.theme--light {
  font-family 'Source Sans Pro', sans-serif
  background $white
}

.wrapper
  max-width 100rem
  width 90%
  margin 0 auto
  &--medium
    max-width 54rem
    width 90%
    margin 0 auto
  &--mini
    max-width 36rem
    width 90%
    margin 0 auto

p
  font-family 'Crimson Text', serif
  font-style italic
  font-size 1.8rem

a
  text-decoration none
  color inherit

.h1
  font-size 5.4rem
  color $darkblue
  font-weight 400

.h2
  font-size: 4.2rem
  font-weight 400

label
  color $grey

input,
textarea
  transition(box-shadow)
  &:hover,
  &:focus,
  &:active
    box-shadow()

// Page specific headers

.index
  header
    background-image url('~assets/images/homeSectionA.svg')
    background-size cover
    background-position bottom
    padding-bottom 25.5rem

.projects,
.personal
  header
    background-image url('~assets/images/projectsBackground.svg')
    background-size cover
    background-position bottom
    padding-bottom 10.5rem

.about
  .header-about
    background-image url('~assets/images/aboutBackground.svg')
    background-size 40%
    background-repeat no-repeat
    background-position left top
    padding-top 10rem
    margin-top -10rem

.contact
  header
    background-image url('~assets/images/contactHeaderBackground.svg')
    background-size cover
    background-position bottom
    padding-bottom 10.5rem